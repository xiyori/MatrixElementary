<Window x:Name="coeffWindow" x:Class="Matrix_Elementary.DialogCoeff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matrix_Elementary"
        mc:Ignorable="d"
        Title="Set coefficient" Height="150" Width="195" ResizeMode="NoResize" Closing="Window_Closing" PreviewKeyUp="coeffWindow_PreviewKeyUp" Icon="images/ico_white.ico">
    <Window.Resources>
        <Style TargetType="Button" x:Name="DefaultButton"/>
        <Style TargetType="TextBox" x:Name="DefaultTextBox"/>
    </Window.Resources>
    <Grid>
        <Label x:Name="label1" Content="Set coefficient:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="CoeffTextBox" HorizontalAlignment="Left" Height="24" Margin="17,45,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="75" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Button x:Name="buttonOK" Content="OK" Margin="0,0,7.6,8" Click="Button_Click" IsDefault="True" HorizontalAlignment="Right" Width="53" Height="19" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
